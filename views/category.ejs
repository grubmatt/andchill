<html>
<head>
  <title>AndChill</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/category.css">
  <link rel="stylesheet" href="/css/restaurant-list.css">

  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/places.js@1.4.15"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

<body class="w3-content w3-border-left w3-border-right">

<!-- Top menu -->
<header class="w3-bar w3-top w3-hide-large w3-black w3-xlarge">
  <span class="w3-bar-item">AndChill</span>
</header>

<!-- !PAGE CONTENT! -->
<div class="w3-main w3-white">

  <!-- Push down content on small screens -->
  <div class="w3-hide-large" style="margin-top:80px"></div>


  <div class="w3-row-padding w3-section">
    <div class="w3-col s6">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/restaurant.jpg" style="width:100%;height:20%; cursor:pointer" title="Restaurants">
    </div>
    <div class="w3-col s6">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/sports.jpg" style="width:100%;height:20%; cursor:pointer" title="Sports">
    </div>
    <div class="w3-col s6">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/bar.jpg" style="width:100%;height:20%; cursor:pointer" title="Bars">
    </div>
    <div class="w3-col s6">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/concert.jpg" style="width:100%;height:20%; cursor:pointer" title="Concerts">
    </div>
  </div>

  <div class="w3-container">
    <div class="w3-row w3-large">
      <div class="w3-col s12">
        <h4><strong>Our recommendations:</strong></h4>
          <ul class="product-list-vertical" id="cheap">
            <% for (var i = 0; i < rests.length; i+=2) { %>
              <li>
                <a href="#" class="product-photo">
                  <img src="<%= rests[i].image_url %>" style="width:100%;height:100%;cursor:pointer";>
                </a>

                <div class="product-details">
                  <h2><%= rests[i].title %></h2>
                  <div class="product-rating">
                    <span class="product-stars" >
                    <% let fakeRating = Math.floor(Math.random() * 5); %>
                    <% for (var j = 0; j < fakeRating; j++) { %> 
                      <i class="fa fa-star"> </i>
                    <% } %>
                    </span>
                    <span class="price" >
                    <% for (var k = 0; k < 1; k++) { %>
                      <i class="fa fa-usd"></i>
                    <% } %>
                    </span>
                  </div> 
                  <span>
                    <a>Tags: <%= rests[i].categories %> </a>
                  </span>
                </div>
              </li>
            <% } %>           
          </ul>
      </div>
    </div>  
  </div>
</div>  
    
</body>
</html>