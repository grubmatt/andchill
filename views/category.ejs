<html>
<head>
  <title>andChill</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/category.css">
</head>

<body class="w3-content w3-border-left w3-border-right">

<!-- Top menu -->
<header class="w3-bar w3-top w3-hide-large w3-black w3-xlarge">
  <span class="w3-bar-item">And Chill</span>
</header>

<!-- !PAGE CONTENT! -->
<div class="w3-main w3-white" style="margin-left:260px">

  <!-- Push down content on small screens -->
  <div class="w3-hide-large" style="margin-top:80px"></div>


  <div class="w3-row-padding w3-section">
    <div class="w3-col s3">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/restaurant.jpg" style="width:100%;height:8%; cursor:pointer" onclick="currentDiv(1)" title="Restaurants">
    </div>
    <div class="w3-col s3">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/sports.jpg" style="width:100%;height:8%; cursor:pointer" onclick="currentDiv(2)" title="Sports">
    </div>
    <div class="w3-col s3">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/bar.jpg" style="width:100%;height:8%; cursor:pointer" onclick="currentDiv(3)" title="Bars">
    </div>
    <div class="w3-col s3">
      <img class="demo w3-opacity w3-hover-opacity-off" src="/img/concert.jpg" style="width:100%;height:8%; cursor:pointer" onclick="currentDiv(4)" title="Concerts">
    </div>
  </div>

  <h4><strong>Our recommendations:</strong></h4>
  <hr>

  <!-- get list of restaurants -->
  <table>
    <tr>
        <th>Name</th>
    </tr>
  <% for (var i = 0; i < rests.length; i++) { %>
    <tr>
      <td><%= rests[i].title %></td>
      </tr>
  <% } %>
  </table>
</div>
</body>
</html>